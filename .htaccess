RewriteEngine On

# Redirigir todo a public/index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/index.php?url=$1 [QSA,L]

# Proteger archivos sensibles
<Files ~ "^\.">
    Order allow,deny
    Deny from all
</Files>

<Files "config">
    Order allow,deny
    Deny from all
</Files>